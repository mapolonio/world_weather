{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "max-len": [2, 140, 4],
    "keyword-spacing": 2,
    "indent": [2, 2, {"VariableDeclarator": { "var": 2, "let": 2, "const": 3}, "SwitchCase": 1}],
    "semi": [2, "always"],
    "no-console": 0,
    "space-before-blocks": 2,
    "quotes": [2, "single"],
    "space-infix-ops": 2,
    "curly": ["error", "all"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-no-undef": "error"
  },
  "plugins": [
    "react"
  ]
}
